<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "tailwind", "new_tailwind" %>
<% end %>

<%# --- Breadcrumbs --- %>
<% breadcrumb :course, @course %>
<% breadcrumb :lecturer, @course, @lecturer %>

<% content_for :title,
"#{@lecturer.username.truncate(TITLE_NAME_LIMIT)} - View Supervisor | ProPro" %>

<%# --- Sidebar --- %>
<% content_for :sidebar do %>
  <%= render_sidebar do %>
    <div class="space-y-1 font-medium text-sm text-gray-600">
      <a
        href="#lecturer-name"
        class="
          block px-3 py-2 rounded-md hover:bg-gray-100 hover:text-gray-900
          transition-colors
        "
      >
        Name
      </a>
      <a
        href="#profile-information"
        class="
          block px-3 py-2 rounded-md hover:bg-gray-100 hover:text-gray-900
          transition-colors
        "
      >
        Profile Information
      </a>
      <a
        href="#projects"
        class="
          block px-3 py-2 rounded-md hover:bg-gray-100 hover:text-gray-900
          transition-colors
        "
      >
        Projects
      </a>
      <a
        href="#proposals"
        class="
          block px-3 py-2 rounded-md hover:bg-gray-100 hover:text-gray-900
          transition-colors
        "
      >
        Proposals
      </a>

      <% if full_access? %>
        <a
          href="#full-released-topics"
          class="
            block px-3 py-2 rounded-md hover:bg-gray-100 hover:text-gray-900
            transition-colors
          "
        >
          Released Topics
        </a>
      <% else %>
        <a
          href="#released-topics"
          class="
            block px-3 py-2 rounded-md hover:bg-gray-100 hover:text-gray-900
            transition-colors
          "
        >
          Released Topics
        </a>
      <% end %>

      <a
        href="#pending-topics"
        class="
          block px-3 py-2 rounded-md hover:bg-gray-100 hover:text-gray-900
          transition-colors
        "
      >
        Pending Topics
      </a>
    </div>
  <% end %>
<% end %>

<%# --- Main Layout --- %>
<main class="w-[90%] mx-auto py-6 flex-auto">
  <div class="space-y-8">

    <section class="overflow-hidden" id="lecturer-name">
      <div class="px-8 py-4">

        <%# View Label Line %>
        <div class="flex items-center gap-4 mb-6">
          <span class="text-sm font-semibold text-gray-500 uppercase tracking-wider">
            View Supervisor
          </span>
          <div class="h-px bg-gray-300 flex-grow"></div>
        </div>

        <%# Name & Avatar Row %>
        <div class="flex items-center gap-6">
          <div
            class="
              w-20 h-20 bg-sky-100 text-sky-700 rounded-full flex items-center justify-center
              text-3xl font-bold shrink-0 uppercase
            "
          >
            <%= @lecturer.username[0].upcase %>
          </div>
          <h1 class="text-4xl font-bold text-gray-900 tracking-tight"><%= @lecturer.username %></h1>
        </div>
      </div>
    </section>

    <section
      class="
        bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden
      "
      id="profile-information"
    >

      <%# Card Header with Actions %>
      <div
        class="
          px-8 pt-6 pb-4 border-b border-gray-100 flex items-center justify-between
        "
      >
        <h2 class="text-xl font-semibold text-gray-900">Profile Information</h2>
        <%# Coordinator Actions %>
        <% if @course.coordinators.include? Current.user %>
          <div class="text-sm">
            <% if @course.coordinators.include?(@lecturer) && @lecturer != Current.user %>
              <%= link_to "Demote to Lecturer",
              demote_to_lecturer_course_lecturer_path(@course, @lecturer),
              data: {
                turbo_method: :patch,
              },
              class: "text-red-600 hover:text-red-800 font-medium hover:underline" %>
            <% elsif @lecturer != Current.user %>
              <%= link_to "Promote To Coordinator",
              promote_to_coordinator_course_lecturer_path(@course, @lecturer),
              data: {
                turbo_method: :patch,
              },
              class: "text-emerald-600 hover:text-emerald-800 font-medium hover:underline" %>
            <% end %>
          </div>
        <% end %>
      </div>

      <%# Card Content %>
      <div class="px-8 py-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-y-8 gap-x-12">

          <%# Role %>
          <div class="flex flex-col items-start gap-2">
            <span class="font-bold text-sm text-black">Role</span>
            <span
              class="
                inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                bg-gray-100 text-gray-800
              "
            >
              <%= @enrolment.role.humanize %>
            </span>
          </div>

          <%# Email %>
          <div class="flex flex-col items-start gap-2">
            <span class="font-bold text-sm text-black">Email</span>
            <%= @lecturer.email_address %>
          </div>

          <%# Description %>
          <div class="flex flex-col items-start gap-2">
            <span class="font-bold text-sm text-black">Description</span>
            <p class="text-gray-900 text-base leading-relaxed">
              <%= @lecturer.description.presence || "No description provided." %>
            </p>
          </div>

          <%# Portfolio %>
          <div class="flex flex-col items-start gap-2">
            <span class="font-bold text-sm text-black">Portfolio / MMU Directory</span>
            <% if @lecturer.web_link.present? %>
              <%= @lecturer.web_link %>
            <% else %>
              <span class="text-gray-500 italic">No web link provided.</span>
            <% end %>
          </div>

        </div>
      </div>
    </section>

    <%# ========================================== %>
    <%# SECTION 3: PROJECTS %>
    <%# ========================================== %>
    <% if access? %>
      <section
        class="
          bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden
        "
        id="projects"
      >
        <div class="px-8 pt-6 pb-4 border-b border-gray-100">
          <h2 class="text-xl font-semibold text-gray-900">Projects</h2>
        </div>

        <div class="px-8 py-6">
          <% if @my_student_projects.empty? %>
            <div
              class="
                py-10 text-center rounded-xl bg-gray-50 border-2 border-dashed border-gray-200
              "
            >
              <p class="text-gray-500">No Projects Available</p>
            </div>
          <% else %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <%= render partial: "courses/project_card",
              collection: @my_student_projects,
              as: :project,
              locals: {
                course: @course,
                lecturer: @lecturer,
              } %>
            </div>
          <% end %>
        </div>
      </section>

      <%# ========================================== %>
      <%# SECTION 4: PROPOSALS %>
      <%# ========================================== %>
      <section
        class="
          bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden
        "
        id="proposals"
      >
        <div class="px-8 pt-6 pb-4 border-b border-gray-100">
          <h2 class="text-xl font-semibold text-gray-900">Proposals</h2>
        </div>

        <div class="px-8 py-6">
          <% if @incoming_proposals.empty? %>
            <div
              class="
                py-10 text-center rounded-xl bg-gray-50 border-2 border-dashed border-gray-200
              "
            >
              <p class="text-gray-500">No Incoming Proposals</p>
            </div>
          <% else %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <%= render partial: "courses/project_card",
              collection: @incoming_proposals,
              as: :project,
              locals: {
                course: @course,
                lecturer: @lecturer,
              } %>
            </div>
          <% end %>
        </div>
      </section>
    <% end %>

    <%# ========================================== %>
    <%# SECTION 5: TOPICS (Student/Guest View) %>
    <%# ========================================== %>
    <% if @is_student || !access? %>
      <section
        class="
          bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden
        "
        id="released-topics"
      >
        <div class="px-8 pt-6 pb-4 border-b border-gray-100">
          <h2 class="text-xl font-semibold text-gray-900">Released Topics</h2>
        </div>
        <div class="px-8 py-6">
          <% if @approved_projects.empty? %>
            <div
              class="
                py-10 text-center rounded-xl bg-gray-50 border-2 border-dashed border-gray-200
              "
            >
              <p class="text-gray-500">No Topics Released</p>
            </div>
          <% else %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <%= render partial: "courses/topic_card",
              collection: @own_approved_projects,
              as: :topic,
              locals: {
                course: @course,
                lecturer: @lecturer,
              } %>
            </div>
          <% end %>
        </div>
      </section>
    <% end %>

    <%# ========================================== %>
    <%# SECTION 6: TOPICS (Full Access View) %>
    <%# ========================================== %>
    <% if full_access? %>
      <%# RELEASED TOPICS %>
      <section
        class="
          bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden
        "
        id="full-released-topics"
      >
        <div class="px-8 pt-6 pb-4 border-b border-gray-100">
          <h2 class="text-xl font-semibold text-gray-900">Released Topics</h2>
        </div>

        <div class="px-8 py-6">
          <% if @own_approved_projects.empty? %>
            <div
              class="
                py-10 text-center rounded-xl bg-gray-50 border-2 border-dashed border-gray-200
              "
            >
              <p class="text-gray-500">No Topics Released</p>
            </div>
          <% else %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <%= render partial: "courses/topic_card",
              collection: @own_approved_projects,
              as: :topic,
              locals: {
                course: @course,
                lecturer: @lecturer,
              } %>
            </div>
          <% end %>
        </div>
      </section>

      <%# PENDING TOPICS %>
      <section
        class="
          bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden
        "
        id="pending-topics"
      >
        <div class="px-8 pt-6 pb-4 border-b border-gray-100">
          <h2 class="text-xl font-semibold text-gray-900">Pending Topics</h2>
        </div>

        <div class="px-8 py-6">
          <% if @not_own_approved_projects.empty? %>
            <div
              class="
                py-10 text-center rounded-xl bg-gray-50 border-2 border-dashed border-gray-200
              "
            >
              <p class="text-gray-500">No Topics Available</p>
            </div>
          <% else %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <%= render partial: "courses/topic_card",
              collection: @not_own_approved_projects,
              as: :topic,
              locals: {
                course: @course,
                lecturer: @lecturer,
              } %>
            </div>
          <% end %>
        </div>
      </section>
    <% end %>

    <%# --- Footer --- %>
    <footer class="flex justify-start">
      <%= link_to course_path(@course), class: "group inline-flex items-center gap-2 px-4 py-2 text-gray-600 hover:text-gray-900 text-sm font-medium transition-colors duration-150 no-underline rounded-lg hover:bg-gray-100" do %>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4 transition-transform group-hover:-translate-x-1"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"
          />
        </svg>
        Back to Lecturers
      <% end %>
    </footer>

  </div>
</main>
