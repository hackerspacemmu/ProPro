<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "tailwind", "new_tailwind" %>
<% end %>

<% content_for :body_class, "bg-gray-50" %>
<%# --- Breadcrumbs --- %>
<% breadcrumb :course, @course %>
<% breadcrumb :lecturer, @course, @lecturer %>

<% content_for :title,
"#{@lecturer.username.truncate(TITLE_NAME_LIMIT)} - View Supervisor | ProPro" %>

<%# --- Sidebar --- %>
<% content_for :sidebar do %>
  <%= render_sidebar do %>
    <div class="space-y-1 font-medium text-sm text-gray-600">
      <a
        href="#lecturer-name"
        class="
          block px-3 py-2 rounded-md hover:bg-gray-100 hover:text-gray-900
          transition-colors
        "
      >Name</a>
      <a
        href="#profile-information"
        class="
          block px-3 py-2 rounded-md hover:bg-gray-100 hover:text-gray-900
          transition-colors
        "
      >Profile Information</a>
      <a
        href="#projects"
        class="
          block px-3 py-2 rounded-md hover:bg-gray-100 hover:text-gray-900
          transition-colors
        "
      >Projects</a>
      <a
        href="#proposals"
        class="
          block px-3 py-2 rounded-md hover:bg-gray-100 hover:text-gray-900
          transition-colors
        "
      >Proposals</a>

      <% if full_access? %>
        <a
          href="#full-released-topics"
          class="
            block px-3 py-2 rounded-md hover:bg-gray-100 hover:text-gray-900
            transition-colors
          "
        >Released Topics</a>
      <% else %>
        <a
          href="#released-topics"
          class="
            block px-3 py-2 rounded-md hover:bg-gray-100 hover:text-gray-900
            transition-colors
          "
        >Released Topics</a>
      <% end %>

      <a
        href="#pending-topics"
        class="
          block px-3 py-2 rounded-md hover:bg-gray-100 hover:text-gray-900
          transition-colors
        "
      >Pending Topics</a>
    </div>
  <% end %>
<% end %>

<%# --- Main Layout --- %>
<div class="w-[95%] min-w-0 mx-auto my-0 pt-2.5">
  <div class="space-y-8">

    <%# --- SECTION 1: IDENTITY --- %>
    <section class="overflow-hidden w-full" id="lecturer-name">
      <div class="py-4 px-2">
        <div class="flex items-center gap-4 mb-6">
          <span
            class="
              text-sm font-semibold text-gray-500 uppercase tracking-wider whitespace-nowrap
            "
          >View Supervisor</span>
          <div class="h-px bg-gray-300 flex-grow w-full min-w-0"></div>
        </div>

        <div
          class="
            flex flex-col sm:flex-row items-center sm:items-center gap-4 sm:gap-6
          "
        >
          <div
            class="
              w-20 h-20 bg-sky-100 text-sky-700 rounded-full flex items-center justify-center
              text-3xl font-bold shrink-0 uppercase
            "
          >
            <%= @lecturer.username[0].upcase %>
          </div>

          <h1
            class="
              text-2xl sm:text-4xl font-bold text-gray-900 tracking-tight break-words min-w-0
              text-center sm:text-left
            "
          >
            <%= @lecturer.username %>
          </h1>
        </div>
      </div>
    </section>

    <%# --- SECTION 2: PROFILE INFORMATION --- %>
    <section
      class="
        bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden
      "
      id="profile-information"
    >
      <div
        class="
          px-4 md:px-8 pt-6 pb-2 flex flex-col sm:flex-row items-start sm:items-center
          justify-between gap-2
        "
      >
        <h2 class="text-xl font-semibold text-gray-900">Profile Information</h2>
        <% if @course.coordinators.include? Current.user %>
          <div class="text-sm">
            <% if @course.coordinators.include?(@lecturer) && @lecturer != Current.user %>
              <%= link_to "Demote to Lecturer",
              demote_to_lecturer_course_lecturer_path(@course, @lecturer),
              data: {
                turbo_method: :patch,
              },
              class: "text-red-600 hover:text-red-800 font-medium hover:underline" %>
            <% elsif @lecturer != Current.user %>
              <%= link_to "Promote To Coordinator",
              promote_to_coordinator_course_lecturer_path(@course, @lecturer),
              data: {
                turbo_method: :patch,
              },
              class: "text-emerald-600 hover:text-emerald-800 font-medium hover:underline" %>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="px-4 md:px-8 py-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-y-8 gap-x-12">
          <div class="flex flex-col items-start gap-2">
            <span class="font-bold text-sm text-black">Role</span>
            <span
              class="
                inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                bg-gray-100 text-gray-800
              "
            >
              <%= @enrolment&.role&.humanize || "Lecturer" %>
            </span>
          </div>
          <div class="flex flex-col items-start gap-2 w-full min-w-0">
            <span class="font-bold text-sm text-black">Email</span>
            <a
              href="mailto:<%= @lecturer.email_address %>"
              class="
                text-gray-900 hover:text-blue-600 hover:underline break-all
              "
            >
              <%= @lecturer.email_address %>
            </a>
          </div>
          <div class="flex flex-col items-start gap-2 col-span-1">
            <span class="font-bold text-sm text-black">Description</span>
            <p
              class="
                text-gray-900 text-base leading-relaxed whitespace-pre-line break-words w-full
              "
            ><%= @lecturer.description.presence || "No description provided." %>
            </p>
          </div>
          <div class="flex flex-col items-start gap-2 w-full min-w-0">
            <span class="font-bold text-sm text-black">Portfolio / MMU Directory</span>
            <% if @lecturer.web_link.present? %>
              <a
                href="<%= @lecturer.web_link %>"
                target="_blank"
                rel="noopener noreferrer"
                class="
                  text-blue-600 hover:text-blue-800 hover:underline break-all
                "
              >
                <%= @lecturer.web_link %>
              </a>
            <% else %>
              <span class="text-gray-500 italic">No web link provided.</span>
            <% end %>
          </div>
        </div>
      </div>
    </section>

    <%# --- SECTION 3: PROJECTS & PROPOSALS --- %>
    <% if access? %>
      <section
        class="
          bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden mt-8
        "
        id="projects"
      >
        <div class="px-4 md:px-8 pt-6">
          <h2 class="text-xl font-semibold text-gray-900">Projects</h2>
        </div>
        <div class="px-4 md:px-8 py-6">
          <% if @my_student_projects.empty? %>
            <div
              class="
                py-10 text-center rounded-xl bg-gray-50 border-2 border-dashed border-gray-100
              "
            >
              <p class="italic text-gray-500">No Projects Available</p>
            </div>
          <% else %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <%= render partial: "courses/project_card",
              collection: @my_student_projects,
              as: :project,
              locals: {
                course: @course,
                lecturer: @lecturer,
              } %>
            </div>
          <% end %>
        </div>
      </section>

      <section
        class="
          bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden mt-8
        "
        id="proposals"
      >
        <div class="px-4 md:px-8 pt-6">
          <h2 class="text-xl font-semibold text-gray-900">Proposals</h2>
        </div>
        <div class="px-4 md:px-8 py-6">
          <% if @incoming_proposals.empty? %>
            <div
              class="
                py-10 text-center rounded-xl bg-gray-50 border-2 border-dashed border-gray-100
              "
            >
              <p class="text-gray-500 italic">No Incoming Proposals</p>
            </div>
          <% else %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <%= render partial: "courses/project_card",
              collection: @incoming_proposals,
              as: :project,
              locals: {
                course: @course,
                lecturer: @lecturer,
              } %>
            </div>
          <% end %>
        </div>
      </section>
    <% end %>

    <%# --- SECTION 4: TOPICS --- %>
    <% topic_collections = [] %>
    <% if @is_student || !access? %>
      <% topic_collections << {
        title: "Released Topics",
        id: "released-topics",
        data: @own_approved_projects,
      } %>
    <% end %>
    <% if full_access? %>
      <% topic_collections << {
        title: "Released Topics",
        id: "full-released-topics",
        data: @own_approved_projects,
      } %>
      <% topic_collections << {
        title: "Pending Topics",
        id: "pending-topics",
        data: @not_own_approved_projects,
      } %>
    <% end %>

    <% topic_collections.uniq { |t| t[:id] }.each do |section| %>
      <section
        class="
          bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden mt-8
        "
        id="<%= section[:id] %>"
      >
        <div class="px-4 md:px-8 pt-4">
          <h2 class="text-xl font-semibold text-gray-900"><%= section[:title] %></h2>
        </div>
        <div class="px-4 md:px-8 py-6">
          <% if section[:data].empty? %>
            <div
              class="
                py-10 text-center rounded-xl bg-gray-50 border-2 border-dashed border-gray-200
              "
            >
              <p class="text-gray-500 italic">No
                <%= section[:title] %>
                Available</p>
            </div>
          <% else %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <%= render partial: "courses/topic_card",
              collection: section[:data],
              as: :topic,
              locals: {
                course: @course,
                lecturer: @lecturer,
              } %>
            </div>
          <% end %>
        </div>
      </section>
    <% end %>

    <footer class="pt-2 pb-2 flex justify-start">
      <%= link_to course_path(@course), class: "group inline-flex items-center gap-2 px-4 py-2 text-gray-600 hover:text-gray-900 text-sm font-medium transition-colors duration-150 no-underline rounded-lg hover:bg-gray-100" do %>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4 transition-transform group-hover:-translate-x-1"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"
          />
        </svg>
        Back to Lecturers
      <% end %>
    </footer>

  </div>
</div>
