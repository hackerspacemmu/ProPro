<div class="field-row">
  <button type="button" class="remove-field">
    <%= image_tag("delete.svg") %>
  </button>
  
  <div class="row">
    <div class="column">
      <%= field_form.text_field :label, placeholder: "Field Label" %>
    </div>
    <div class="hint-row">
      <%= field_form.text_area :hint, placeholder: "Hint Text" %>
    </div>  
    <div class="column">
      <%= field_form.select :field_type,
          options_for_select(
            ProjectTemplateField.field_types.keys.map { |key| [key.humanize, key] },
            field_form.object.field_type
          ),
          { prompt: "Select field type" },
          { class: "field-type-select" } %>
    </div>
    <div class="column">
      <%= field_form.select :applicable_to,
          options_for_select(
            ProjectTemplateField.applicable_tos.keys.map { |key| [key.humanize, key] },
            field_form.object.applicable_to
          ),
          { prompt: "Select applicability" } %>
    </div>
    <div class="column options-column">
      <% field_type = field_form.object.field_type %>
      <% show_options = ['dropdown', 'radio'].include?(field_type) %>
      <div class="options-section <%= 'hidden' unless show_options %>">
        <%= render 'option_section', field_form: field_form, field_type: field_type %>
      </div>
    </div>
  </div>
  
  <%= field_form.hidden_field :_destroy, value: false, class: "destroy-flag" %>
</div>