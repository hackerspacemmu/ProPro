<%= link_to course_path(course), class: "group block no-underline h-full" do %>
  <div class="h-full bg-white rounded-xl border border-gray-200 p-6 transition-all duration-200 ease-in-out group-hover:border-green-400 group-hover:shadow-md group-hover:-translate-y-1 flex flex-col justify-between">
    <div>
      <div class="flex items-start justify-between mb-2">
        <h4 class="text-lg font-bold text-gray-900 group-hover:text-green-700 transition-colors">
          <%= course.course_name %>
        </h4>
        <svg class="w-5 h-5 text-gray-300 group-hover:text-green-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </div>
      <p class="text-sm text-gray-500 leading-relaxed line-clamp-3 mb-4">
        <%= course.course_description.presence || "No description available for this course." %>
      </p>
    </div>

    <div class="pt-4 border-t border-gray-100 flex items-center gap-2">
      <div class="w-6 h-6 rounded-full bg-gray-100 flex items-center justify-center text-xs font-bold text-gray-500">
        <%= course.coordinators.first&.username&.first&.upcase || "?" %>
      </div>
      <span class="text-xs font-medium text-gray-400">
        Coordinator: <span class="text-gray-600"><%= course.coordinators.first&.username || "None" %></span>
      </span>
    </div>
  </div>
<% end %>
