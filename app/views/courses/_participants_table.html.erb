<% if @course.grouped? %>
  <!-- Grouped Course: Show Project Groups -->
  <% if group_list.present? %>
    <div class="table-container">
      <table class="participants-table">
        <thead>
          <tr>
            <th><%= image_tag "alphabet.svg" %> Group Name</th>
            <th><%= image_tag "person_grey.svg" %> Members</th>
            <th><%= image_tag "project.svg" %> Project Title</th>
            <th><%= image_tag "status_grey.svg" %> Status</th>
            <th><%= image_tag "person_grey.svg" %> Supervisor</th>
          </tr>
        </thead>
        <tbody>
          <% group_list.each do |group| %>
            <% group_project = group_project_for(group, @course) %>
            <% latest_instance = group_project&.project_instances&.order(:version)&.last %>
            <% status = group_status(group, @course) %>
            <% supervisor = latest_instance&.supervisor %>
            <tr class="participant-row">
              <td>
                <%= link_to participant_profile_course_path(@course, group.id, 'group'), class:"cell-link" do %>            
                  <%= group.group_name || "Group #{group.id}" %>
                <% end %>
              </td>
              <td>
                <%= link_to participant_profile_course_path(@course, group.id, 'group'), class:"cell-link" do %>
                  <ul class="member-list">
                    <% group.project_group_members.includes(:user).each do |member| %>
                      <div class="profile-container">
                        <div class="profile-avatar"><%= member.user.username.first.upcase %></div>
                        <span><%= member.user.username || '-' %></span>
                         <% if !member.user.has_registered %>
                          <span class="pending-badge" title="Student has been invited but has not activated their ProPro account.">Pending</span>
                          <%= button_to resend_invite_path(member.user), method: :post, class: "resend-invite-btn", title: "Resend the email invitation to the student." do %>
                            <%= image_tag "email.svg" %>
                          <% end %>
                        <% end %>
                      </div>
                    <% end %>
                  </ul>
                <% end %>
              </td>
              <td>
                <% if group_project.present? %>
                  <%= link_to (latest_instance&.title || '-'), course_project_path(@course, group_project), class:"cell-link" %>
                <% else %>
                  <span><%= latest_instance&.title || '-' %></span>
                <% end %>
              </td>
              <td>
                <% if group_project.present? %>
                  <%= link_to course_project_path(@course, group_project), class:"cell-link" do %>
                    <span class="status-badge <%= status.downcase.gsub('_', '-') %>">
                      <div class="status-indicator <%= status.downcase.gsub('_', '-') %>"></div>
                      <%= status.humanize %>
                    </span>
                  <% end %>
                <% else %>
                  <span class="status-badge <%= status.downcase.gsub('_', '-') %>">
                    <div class="status-indicator <%= status.downcase.gsub('_', '-') %>"></div>
                    <%= status.humanize %>
                  </span>
                <% end %>
              </td>
              <td>
                <% if supervisor.present? %>
                  <%= link_to course_lecturer_path(@course, supervisor), class:"cell-link" do %>
                    <div class="profile-container">
                      <div class="profile-avatar"><%= supervisor&.username.first.upcase %></div>
                      <%= supervisor&.username || '-' %>
                    </div>
                  <% end %>
                <% else %>
                  <span> - </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="empty-state">
      <%= params[:status_filter].present? && params[:status_filter] != 'all' ?
          "No groups found with #{params[:status_filter].humanize} status." :
          "No Groups/Students have been added yet." %>
    </p>
  <% end %>
<% else %>
  <!-- Individual Course: Show Students -->
  <% if student_list.present? %>
    <div class="table-container">
      <table class="participants-table">
        <thead>
          <tr>
            <th><%= image_tag "alphabet.svg" %> Student Name</th>
            <th><%= image_tag "person_grey.svg" %> Student ID</th>
            <th><%= image_tag "project.svg" %> Project Title</th>
            <th><%= image_tag "status_grey.svg" %> Status</th>
            <th><%= image_tag "person_grey.svg" %> Supervisor</th>
          </tr>
        </thead>
        <tbody>
          <% student_list.each do |student| %>
            <% student_project = student_project_for(student, @course) %>
            <% latest_instance = student_project&.project_instances&.order(:version)&.last %>
            <% status = student_status(student, @course) %>
            <% supervisor = latest_instance&.supervisor %>
            <tr class="participant-row">
              <td>
                <div class="profile-wrapper">
                  <%= link_to participant_profile_course_path(@course, student.id, 'student'), class:"cell-link" do %>
                    <div class="profile-container">
                      <div class="profile-avatar"><%= student.username.first.upcase %></div>
                      <span><%= student.username || '-' %></span>
                    </div>
                  <% end %>
                  <% if !student.has_registered %>
                    <div class="pending-container">
                      <span class="pending-badge" title="Student has been invited but has not activated their ProPro account.">Pending</span>
                      <%= button_to resend_invite_path(student), method: :post, class: "resend-invite-btn", title: "Resend the email invitation to the student." do %>
                        <%= image_tag "email.svg" %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </td>
              <td> 
                <%= link_to participant_profile_course_path(@course, student.id, 'student'), class:"cell-link" do %>
                  <%= student.student_id || '-' %>
                <% end %>
              </td>
              <td>
                <% if student_project.present? %>
                  <%= link_to course_project_path(@course, student_project), class:"cell-link" do %>
                    <%= latest_instance&.title || '-' %>
                  <% end %>
                <% else %>
                  <span><%= latest_instance&.title || '-' %></span>
                <% end %>
              </td>
              <td>
                <% if student_project.present? %>
                  <%= link_to course_project_path(@course, student_project), class:"cell-link" do %>
                    <span class="status-badge <%= status.downcase.gsub('_', '-') %>">
                      <div class="status-indicator <%= status.downcase.gsub('_', '-') %>"></div>
                      <%= status.humanize %>
                    </span>
                  <% end %>
                <% else %>
                  <span class="status-badge <%= status.downcase.gsub('_', '-') %>">
                    <div class="status-indicator <%= status.downcase.gsub('_', '-') %>"></div>
                    <%= status.humanize %>
                  </span>
                <% end %>
              </td>
              <td>
                <% if supervisor.present? %>
                  <%= link_to course_lecturer_path(@course, supervisor), class:"cell-link" do %>
                    <div class="profile-container">
                      <div class="profile-avatar"><%= supervisor&.username.first.upcase %></div>
                      <%= supervisor&.username || '-' %>
                    </div>
                  <% end %>
                <% else %>
                  <span> - </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="empty-state">
      <%= params[:status_filter].present? && params[:status_filter] != 'all' ?
          "No students found with #{params[:status_filter].humanize} status." :
          "No students have been enrolled yet." %>
    </p>
  <% end %>
<% end %>