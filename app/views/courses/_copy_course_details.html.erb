<%= turbo_frame_tag "overlay_content" do %>
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-xl font-bold text-gray-800"><%= course.course_name %></h3>
    <%= link_to "â† Back", :back, data: { turbo_frame: "course_card_display" }, class: "text-sm text-blue-600 hover:underline" %>
  </div>

  <div class="flex-grow min-h-[65vh] overflow-y-auto pr-2 scrollbar-thin">
    <ul class="divide-y divide-gray-100">
      <li class="py-5">
        <span class="block text-xs font-semibold text-gray-500 uppercase mb-1">Course Name</span>
        <span class="text-gray-800"><%= course.course_name %></span>
      </li>

      <li class="py-5">
        <span class="block text-xs font-semibold text-gray-500 uppercase mb-1">Project details</span>
        <span class="text-gray-800"><%= course.course_description.presence || "No description provided." %></span>
      </li>

      <li class="py-5">
        <span class="block text-xs font-semibold text-gray-500 uppercase mb-1">Maximum projects per supervisor</span>
        <span class="text-gray-800"><%= course.supervisor_projects_limit %></span>
      </li>

      <li class="py-5">
        <span class="block text-xs font-semibold text-gray-500 uppercase mb-1">Project file link</span>
        <% if course.file_link.present? %>
          <%= link_to "View Document", course.file_link, target: "_blank", class: "text-blue-600 hover:underline" %>
        <% else %>
          <span class="text-gray-400 italic">No link available</span>
        <% end %>
      </li>

      <li class="py-5">
        <span class="block text-xs font-semibold text-gray-500 uppercase mb-1">Lecturer topics require approval?</span>
        <span class="text-gray-800"><%= course.require_coordinator_approval ? "True" : "False" %></span>
      </li>

      <li class="py-5">
        <span class="block text-xs font-semibold text-gray-500 uppercase mb-1">Starting Week</span>
        <span class="text-gray-800"><%= course.starting_week %></span>
      </li>

      <li class="py-5">
        <span class="block text-xs font-semibold text-gray-500 uppercase mb-1">Use progress updates?</span>
        <span class="text-gray-800"><%= course.use_progress_updates ? "True" : "False" %></span>
      </li>

      <li class="py-5">
        <span class="block text-xs font-semibold text-gray-500 uppercase mb-1">Number of progress updates</span>
        <span class="text-gray-800"><%= course.number_of_updates || 0 %></span>
      </li>

      <li class="py-5">
        <span class="block text-xs font-semibold text-gray-500 uppercase mb-1">Lecturer views public?</span>
        <span class="text-gray-800"><%= course.lecturer_access ? "True" : "False" %></span>
      </li>

      <li class="py-5">
        <span class="block text-xs font-semibold text-gray-500 uppercase mb-1">Student can see projects from</span>
        <span class="text-gray-800"><%= course.student_access&.humanize %></span>
      </li>
    </ul>
  </div>

  <div class="mt-6 flex justify-end">
    <button type="button" class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 text-sm font-medium rounded shadow-sm transition">
      Copy Details
    </button>
  </div>
<% end %>
