<%= turbo_frame_tag "overlay_content" do %>
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-2xl font-bold text-gray-600">Select Fields to Copy: <%= course.course_name %></h3>
    <%= link_to "â† Back", :back, data: { turbo_frame: "course_card_display" }, class: "text-sm text-blue-600 hover:underline" %>
  </div><br>

  <div class="flex-grow max-h-[60vh] overflow-y-auto pr-2 scrollbar-thin">
    <% if mode == "settings" %>
      <ul class="divide-y divide-gray-100">
        <li class="py-5 flex items-center gap-6">
          <div class="flex-shrink-0">
            <input type="checkbox" name="course[course_description]" <%= course.course_description.blank? ? 'disabled' : 'checked' %>
                class="h-6 w-6 rounded border-gray-300 text-blue-600 focus:ring-blue-500 <%= course.course_description.blank? ? 'cursor-not-allowed' : 'cursor-pointer' %>">
          </div>
          <div class="flex flex-col">
            <span class="block text-lg font-semibold text-gray-800 py-1">Project details</span>
            <% if course.course_description.present? %>
              <span class="text-gray-800 text-base"><%= course.course_description %></span>
            <% else %>
              <span class="text-gray-400 italic text-base">No description provided</span>
            <% end %>
          </div>
        </li>

        <li class="py-5 flex items-center gap-6">
          <div class="flex-shrink-0">
            <input type="checkbox" name="course[supervisor_projects_limit]" checked class="h-6 w-6 rounded border-gray-300 text-blue-600 focus:ring-blue-500 cursor-pointer">
          </div>
          <div class="flex flex-col">
            <span class="block text-lg font-semibold text-gray-800 py-1">Maximum projects per supervisor</span>
            <span class="text-gray-800 text-base"><%= course.supervisor_projects_limit %></span>
          </div>
        </li>

        <li class="py-5 flex items-center gap-6">
          <div class="flex-shrink-0">
            <input type="checkbox" name="course[file_link]" <%= course.course_description.blank? ? 'disabled' : 'checked' %> 
                class="h-6 w-6 rounded border-gray-300 text-blue-600 focus:ring-blue-500 <%= course.course_description.blank? ? 'cursor-not-allowed' : 'cursor-pointer' %>">
          </div>
          <div class="flex flex-col">
            <span class="block text-lg font-semibold text-gray-800 py-1">Project file link</span>
            <% if course.file_link.present? %>
              <%= link_to "View Document", course.file_link, target: "_blank", class: "text-blue-600 hover:underline" %>
            <% else %>
              <span class="text-gray-400 italic">No link available</span>
            <% end %>
          </div>
        </li>

        <li class="py-5 flex items-center gap-6">
          <div class="flex-shrink-0">
            <input type="checkbox" name="course[require_coordinator_approval]" checked class="h-6 w-6 rounded border-gray-300 text-blue-600 focus:ring-blue-500 cursor-pointer">
          </div>
          <div class="flex flex-col">
            <span class="block text-lg font-semibold text-gray-800 py-1">Lecturer topics require approval?</span>
            <span class="text-gray-800 text-base"><%= course.require_coordinator_approval ? "True" : "False" %></span>
          </div>
        </li>

        <li class="py-5 flex items-center gap-6">
          <div class="flex-shrink-0">
            <input type="checkbox" name="course[starting_week]" checked class="h-6 w-6 rounded border-gray-300 text-blue-600 focus:ring-blue-500 cursor-pointer">
          </div>
          <div class="flex flex-col">
            <span class="block text-lg font-semibold text-gray-800 py-1">Starting Week</span>
            <span class="text-gray-800 text-base"><%= course.starting_week %></span>
          </div>
        </li>

        <li class="py-5 flex items-center gap-6">
          <div class="flex-shrink-0">
            <input type="checkbox" name="course[use_progress_updates]" checked class="h-6 w-6 rounded border-gray-300 text-blue-600 focus:ring-blue-500 cursor-pointer">
          </div>
          <div class="flex flex-col">
            <span class="block text-lg font-semibold text-gray-800 py-1">Use progress updates?</span>
            <span class="text-gray-800 text-base"><%= course.use_progress_updates ? "True" : "False" %></span>
          </div>
        </li>

        <li class="py-5 flex items-center gap-6">
          <div class="flex-shrink-0">
            <input type="checkbox" name="course[number_of_updates]" checked class="h-6 w-6 rounded border-gray-300 text-blue-600 focus:ring-blue-500 cursor-pointer">
          </div>
          <div class="flex flex-col">
            <span class="block text-lg font-semibold text-gray-800 py-1">Number of progress updates</span>
            <span class="text-gray-800 text-base"><%= course.number_of_updates || 0 %></span>
          </div>
        </li>

        <li class="py-5 flex items-center gap-6">
          <div class="flex-shrink-0">
            <input type="checkbox" name="course[lecturer_access]" checked class="h-6 w-6 rounded border-gray-300 text-blue-600 focus:ring-blue-500 cursor-pointer">
          </div>
          <div class="flex flex-col">
            <span class="block text-lg font-semibold text-gray-800 py-1">Lecturer views public?</span>
            <span class="text-gray-800 text-base"><%= course.lecturer_access ? "True" : "False" %></span>
          </div>
        </li>

        <li class="py-5 flex items-center gap-6">
          <div class="flex-shrink-0">
            <input type="checkbox" name="course[student_access]" checked class="h-6 w-6 rounded border-gray-300 text-blue-600 focus:ring-blue-500 cursor-pointer">
          </div>
          <div class="flex flex-col">
            <span class="block text-lg font-semibold text-gray-800 py-1">Student can see projects from</span>
            <span class="text-gray-800 text-base"><%= course.student_access&.humanize %></span>
          </div>
        </li>
      </ul>
    <% elsif mode == "template" %>
      <ul class="divide-y divide-gray-200">
        <% course.project_template.project_template_fields.each do |field| %>
          <li class="py-5 flex items-start gap-6">
            <div class="flex-shrink-0 mt-1">
              <input type="checkbox" name="course[<%= field.label.parameterize.underscore %>]" checked 
                  class="h-6 w-6 rounded border-gray-300 text-blue-600 focus:ring-blue-500 cursor-pointer">
            </div>

            <div class="flex flex-col flex-grow">
              <div class="flex items-center gap-3">
                <span class="block text-lg font-semibold text-gray-800 py-1">
                  <%= field.label %>
                </span>
                <span class="inline-flex items-center rounded-full bg-indigo-50 px-2 py-0.5 text-xs font-medium text-indigo-700 ring-1 ring-inset ring-indigo-700/10">
                  <%= field.field_type.humanize %>
                </span>
              </div>

              <div class="text-gray-800 text-base">
                <% if field.hint.present? %>
                  <%= field.hint %>
                <% else %>
                  <span class="text-gray-400 italic text-base">No hint provided</span>
                <% end %>
              </div>

              <div class="mt-2 flex flex-wrap gap-4 text-xs text-gray-500 font-medium uppercase tracking-wider">
                <span>Target: <%= field.applicable_to.humanize %></span>
              </div>
                
              <% if field.field_type.in?(%w[dropdown radio]) %>
                <div class="mt-2 flex flex-wrap gap-4 text-xs text-gray-500 font-medium uppercase tracking-wider">
                  <div class="flex gap-1 items-center">
                    <span>Options:</span>
                    <div class="flex flex-wrap gap-1">
                      <% field.option_list.each do |option| %>
                        <span class="bg-gray-100 text-gray-600 px-1.5 py-0.5 rounded"><%= option %></span>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="mt-6 flex justify-end">
    <button type="button" class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 text-sm font-medium rounded shadow-sm transition">
      Copy Details
    </button>
  </div>
<% end %>
