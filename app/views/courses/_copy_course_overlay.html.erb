<div data-controller="overlay" class="relative z-50">
  <div class="flex justify-end">
    <button type="button" data-action="click->overlay#open" class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 text-sm font-medium rounded shadow-sm">
      Reuse details from another course
    </button>
  </div>

  <div data-overlay-target="menu" data-action="click->overlay#closeOnBackdrop"
      class="fixed inset-0 z-[60] flex items-start justify-center pt-20 bg-black/50 transition-opacity duration-150 opacity-0 pointer-events-none">

    <%= turbo_frame_tag "overlay_content", class: "bg-white rounded-xl shadow-2xl w-9/12 min-h-[85vh] max-h-[85vh] flex flex-col p-10 relative",
        data: { overlay_target: "container" } do %>
      <div class="mb-6">
        <h3 class="text-2xl font-bold text-gray-600">Select a Course to Copy</h3>
      </div><br>

      <div data-overlay-target="content" class="flex-grow max-h-[60vh] overflow-y-auto pr-2 scrollbar-thin">
        <% if @courses.present? %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% @courses.each do |course| %>
              <div data-overlay-target="card" data-action="click->overlay#select" data-overlay-course-id-param="<%= course.id %>"
                  class="h-full min-h-[240px] bg-white rounded-xl border border-gray-200 p-8 transition-all duration-200 ease-in-out hover:border-green-400 hover:shadow-md flex flex-col justify-between">
                <div>
                  <div class="flex items-start justify-between mb-2">
                    <h4 class="text-lg font-bold text-gray-900 transition-colors">
                      <%= course.course_name %>
                    </h4>
                  </div>

                  <p class="text-sm text-gray-500 leading-relaxed line-clamp-3 mb-4">
                    <%= course.course_description.presence || "No description available for this course." %>
                  </p>
                </div>

                <div class="pt-4 border-t border-gray-100 flex items-center gap-2">
                  <div class="w-6 h-6 rounded-full bg-gray-100 flex items-center justify-center text-xs font-bold text-gray-500">
                    <%= course.coordinators.first&.username&.first&.upcase || "?" %>
                  </div>
                  <span class="text-xs font-medium text-gray-400">
                    Coordinator:
                    <span class="text-gray-600"><%= course.coordinators.first&.username || "None" %></span>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="col-span-1 w-full flex items-center gap-3 p-6 bg-white rounded-xl border border-gray-100 shadow-sm">
            <%= image_tag "info.svg", class: "w-6 h-6" %>
              <h5 class="text-sm text-gray-600 font-medium m-0">
                You have no courses at the moment. Please create one.
              </h5>
          </div>
        <% end %>
      </div>

      <div class="mt-6 flex justify-end">
        <button type="button" 
            data-action="click->overlay#close"
            class="text-red-600 hover:text-red-800 text-sm font-medium">
          Cancel
        </button>
      </div>
    <% end %>
  </div>
</div>
